    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2016"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/tests/**/*.ts"
  ]
}